<h1>User info</h1>

<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <p>name</p><h3 class="profile-name"><%= @user.name %></h3>
  <p>introduction</p><h3 class="profile-name"><%= @user.introduction %></h3>
   <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>


<h2>New book</h2>

<%= form_with model:@book, local:true do |f| %>

<div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
</div>
  <div class="field">
  <label for="book_body">Body</label>
  <%= f.text_area :body %>
</div>
<div class="actions">
  <%= f.submit 'Create Book' %>
</div>
<%end%>


</body>

<% @books.each do |book| %>
<div>
  
  <%= link_to book_path(post_image.id) do %>
    <%= attachment_image_tag book, :image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag('sample-author1.jpg') %></p>
  <p>ショップ名：<%= book.shop_name %></p>
  <p>説明：<%= book.caption %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>
<% end %>
<%= paginate @books %>